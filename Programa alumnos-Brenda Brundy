package a;

import java.util.Scanner;

public class Clase {

	
	

	public static void main(String[] args) {
		Scanner reader = new Scanner(System.in);
		
		int indice = 1;
		int nota1 = 0;
		int nota2 = 0;
		int nota3 = 0;
		int promedio = 0;
		int aprobados = 0;
		int desaprobados = 0;
		
		String nombre;
		String apellido;
		int legajo;
		
		
		while (indice <=5) {
			/*System.out.println("Ingrese el nombre y apellido del alumno: ");
			nombre=reader.nextLine();
			System.out.println("Ingrese el legajo del alumno: ");
			legajo= reader.nextInt();
			*/
			System.out.println("Ingrese la nota de matematica del alumno Nro"+indice+ ": ");
			nota1= reader.nextInt();
			System.out.println("Ingrese la nota de lengua del alumno Nro"+indice+": ");
			nota2= reader.nextInt();			
			System.out.println("Ingrese la nota de programacion del alumno Nro"+indice+": ");
			nota3=reader.nextInt();
			
			promedio= (nota1 + nota2 +nota3)/3;
			//System.out.println("El alumno "+nombre+" "+ "de legajo: "+legajo);
			System.out.println("Tiene de promedio: "+ promedio);
			
			if (promedio<=6) {
				System.out.println("El alumno no esta probado");
			}
			else if (promedio>=9) {
				System.out.println("Es un alumno destacado");
			}
			if (nota1<6 || nota2<6  || nota3<6)
			{
				System.out.println("El alumno tiene materias sin aprobar");
			}
			indice=indice+1;				
			
		}	
						
		//System.out.println("La cantidad de aprobados son "+(aprobados)+" personas");
		//System.out.println("La cantidad de desprobados son "+(desaprobados)+" personas");
		
	}

}
